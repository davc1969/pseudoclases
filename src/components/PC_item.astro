---
const { id, title, description, example, codigo1 } = Astro.props
---

<article id={id}>
  <h2>{title}</h2>
  <div class="explanati">
    <div class="texto">
      <p set:html={description}></p>
    </div>
    <div class="codigo" set:html={codigo1}>

    </div>
  </div>
</article>

<style>
  article {
    width: 90%;
    margin: 1rem auto;
    border: 2px solid #888;
    border-radius: 1rem;
    padding: 1rem;
  }

  h2 {
    color: indianred;
    font-size: 2rem;
  }
  .explanati {
    margin-top: 0.5rem;
    display: flex;
    font-size: 0.9rem;
    color: #ccc;
    gap: 2rem;
  }

  .texto {
    width: 40%;
  }

  .codigo {
    width: 60%
  }

  pre {
    white-space: pre;
  }
  
</style>